/bin        #Двоичные файлы (основные команды)
/sbin       #Системные двоичные файлы (for root user)
/lib        #Библиотеки для двоичных файлов
/usr        #Дублирующие двоичные файлы
/usr/local  #Устанавливаются сторонние приложения (docker java python)
/opt        #Еще одно место для установки сторонних приложений
/boot       #Папка для загрузки системы
/etc        #Конфигурация для приложений
/dev        #Устройства подключенные к компьютеру
/tmp        #Временные файлы для разных приложений
/media      #сд юсб
/mnt        #папка для ручного монтирования

